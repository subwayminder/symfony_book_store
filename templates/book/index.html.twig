{% extends 'base.html.twig' %}

{% block title %}Книжный магазин{% endblock %}

{% block body %}
<style>
    /*.example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }*/
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
{#    <div class="count">#}
{#        {{ books.getTotalItemCount }}#}
{#    </div>#}
    <table style="width: 100%" class="table table-light">
        <thead class="thead-dark">
        <tr>
            <th class="tc">#</th>
            <th class="tc">Название</th>
            <th class="tc">Год</th>
            <th class="tc">Автор</th>
        </tr>
        </thead>
        <tbody>
        {% for book in books %}
            <tr>
                <td><a style="color: black" class="btn" href="{{ path('book_edit',{id: book.id}) }}">{{ book.id }}*</a></td>
                <td><a style="color: black" class="btn" href="{{ path('book_edit',{id: book.id}) }}">{{ book.name }}</a></td>
                <td><a style="color: black" class="btn" href="{{ path('book_edit',{id: book.id}) }}">{{ book.year }}</a></td>
                <td><a style="color: black" class="btn" href="{{ path('book_edit',{id: book.id}) }}">{{ book.author }}</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    <a class="btn btn-secondary" href="{{ path('book_create') }}">Добавить книгу</a>

    <div class="navigation">
        {{ knp_pagination_render(books) }}
    </div>
</div>
{% endblock %}
